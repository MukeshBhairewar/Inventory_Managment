@model Inventory_Managment.Models.ItemMaster

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Item</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f4f4;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            text-align: center; /* Center the content */
        }

        .page-header {
            text-align: center;
            margin-bottom: 20px;
        }

            .page-header h1 {
                font-size: 36px;
                color: #007BFF;
                font-weight: bold;
            }

        .form-container {
            display: flex;
            justify-content: center; /* Center the form horizontally */
            align-items: center; /* Center the form vertically */
            flex-direction: column; /* Stack form elements vertically */
        }

        .form-group {
            margin-bottom: 20px;
            width: 100%; /* Make textboxes and buttons full width */
        }

        label.control-label {
            font-weight: bold;
        }

        /* Style text boxes with increased border width */
        .form-control {
            border-width: 2px;
        }

        /* Style the "Save" and "Back to List" links */
        .btn-action {
            background-color: #007BFF;
            color: #fff;
            text-decoration: none;
            padding: 5px 10px;
            border-radius: 5px;
            margin-right: 10px;
            transition: transform 0.3s ease-in-out;
        }

            .btn-action:hover {
                transform: scale(1.05);
                background-color: #0056b3;
            }

        /* Change the "Back to List" button color to success */
        .btn-success {
            background-color: #28a745;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h1>Edit Item</h1>
        </div>
        <div class="form-container">
            <form asp-action="Edit" class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ItemCode" />
                <div class="form-group">
                    <label asp-for="ItemName" class="control-label"></label>
                    <input asp-for="ItemName" class="form-control" />
                    <span asp-validation-for="ItemName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Uom" class="control-label"></label>
                    <input asp-for="Uom" class="form-control" />
                    <span asp-validation-for="Uom" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mrp" class="control-label"></label>
                    <input asp-for="Mrp" class="form-control" />
                    <span asp-validation-for="Mrp" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-action" />
                    <a class="btn btn-success ml-3" asp-action="Index">Back to List</a> <!-- Added margin to the "Back to List" button -->
                </div>
            </form>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
